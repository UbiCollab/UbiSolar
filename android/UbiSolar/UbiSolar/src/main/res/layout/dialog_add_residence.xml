<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.sintef_energy.ubisolar.dialogs.AddResidenceDialog">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:id="@+id/textName"
            android:layout_gravity="center_horizontal" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textName"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/dialog_add_usage_edit_name"
            android:hint="Name of residence" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Description"
            android:id="@+id/textDevice"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textDevice"
            android:layout_gravity="center_horizontal"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/dialog_add_usage_edit_description"
            android:hint="Description of residence" />

    </LinearLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Number of residents"
            android:id="@+id/textResidents"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:scaleType="center"
            android:cropToPadding="true"
            android:id="@+id/dialog_add_residence_residents_down"
            android:background="@null"
            android:src="@android:drawable/arrow_down_float"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textResidents" />


        <ImageButton
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:id="@+id/dialog_add_residence_residents_up"
            android:src="@android:drawable/arrow_up_float"
            android:background="@null" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/dialog_add_residence_residents"
            android:hint=""
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/dialog_add_residence_residents_down"
            android:layout_toLeftOf="@+id/dialog_add_residence_residents_up" />

    </RelativeLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Area of residence"
            android:id="@+id/textArea"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:scaleType="center"
            android:cropToPadding="true"
            android:id="@+id/dialog_add_residence_area_down"
            android:background="@null"
            android:src="@android:drawable/arrow_down_float"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textArea" />


        <ImageButton
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:id="@+id/dialog_add_residence_area_up"
            android:src="@android:drawable/arrow_up_float"
            android:background="@null" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/dialog_add_residence_area"
            android:hint=""
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/dialog_add_residence_area_down"
            android:layout_toLeftOf="@+id/dialog_add_residence_area_up" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Area of residence"
            android:id="@+id/textZipCode"
            android:layout_gravity="center_horizontal" />


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/dialog_add_residence_zip_code"
            android:hint=""
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textZipCode"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
 />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Energy class"
            android:id="@+id/textEnergyClass"
            android:layout_gravity="center_horizontal" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/dialog_add_usage_spinner"
            android:layout_toRightOf="@+id/textEnergyClass"
            />

    </RelativeLayout>

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add"
        android:id="@+id/btnAddResidence" />


</LinearLayout>
