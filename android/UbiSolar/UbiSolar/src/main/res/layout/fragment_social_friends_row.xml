<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">


    <com.facebook.widget.ProfilePictureView
        android:id="@+id/social_profile_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/social_user_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/social_profile_pic"
        android:text="@string/social_user_name"
        android:textColor="#000"
        android:textSize="22dp"
        android:layout_alignTop="@+id/social_profile_pic"
        android:layout_alignBottom="@+id/social_profile_pic"
        android:gravity="center_vertical" />

</RelativeLayout>