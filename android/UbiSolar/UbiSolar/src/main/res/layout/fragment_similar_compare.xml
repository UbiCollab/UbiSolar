<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:orientation="vertical">



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColorHint="#d8d8d8"
                android:padding="20dp"
                android:text="Comparison based on:"
                android:layout_alignParentTop="true"
                android:layout_weight="70"
                android:id="@+id/compBasedOn"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginRight="120dp"
                android:id="@+id/changeToCompSettings"
                android:gravity="right"
                android:linksClickable="true"
                android:clickable="true"
                android:layout_toRightOf="@id/compBasedOn"
                android:text="Change this?"
                android:onClick="onClick"
                />


            <CheckedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checked="true"
                android:textSize="20dp"
                android:layout_marginTop="60dp"
                android:paddingLeft="25dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:gravity="center_vertical"
                android:id="@+id/areaCheckedTextView"
                android:text="Area"
                />

            <CheckedTextView
                android:layout_below="@id/areaCheckedTextView"
                android:layout_marginTop="105dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checked="true"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:text="Number of residents"
                android:id="@+id/resCheckedTextView"
                />

            <CheckedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checked="true"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:layout_marginTop="150dp"
                android:paddingLeft="25dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:text="Residence size"
                android:id="@+id/sizeCheckedTextView"
                />

            <CheckedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checked="false"
                android:textSize="20dp"
                android:layout_marginTop="195dp"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:text="Energy class"
                android:id="@+id/energyCheckedTextView"
                />
            </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

            <ImageView
                android:id="@+id/compFriendChart"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="270dp"

                android:src="@drawable/graph" />

    </RelativeLayout>



</RelativeLayout>