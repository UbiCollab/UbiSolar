<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/residence_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/home" />


    <TextView
        android:id="@+id/residence_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:paddingLeft="25dp"
        android:layout_toRightOf="@id/residence_icon"
        android:text="Name" />

    <TextView
        android:id="@+id/residence_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/residence_name"
        android:layout_marginTop="8dp"
        android:paddingLeft="25dp"
        android:layout_toRightOf="@id/residence_icon"
        android:text="description" />

    <TextView
        android:id="@+id/residence_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="25dp"
        android:layout_toRightOf="@id/residence_icon"
        android:layout_below="@id/residence_description"
        android:text="area" />

    <TextView
        android:id="@+id/residence_residents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="25dp"
        android:layout_toRightOf="@id/residence_icon"
        android:layout_below="@id/residence_size"
        android:text="residents" />

</RelativeLayout>